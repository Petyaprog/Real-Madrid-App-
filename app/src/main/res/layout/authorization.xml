<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1A59A3"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/user_button"
        android:layout_width="142dp"
        android:layout_height="147dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="28dp"
        android:background="#1A59A3"
        android:src="@drawable/user_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/admin_button"
        android:layout_width="139dp"
        android:layout_height="148dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="336dp"
        android:background="#1A59A3"
        android:src="@drawable/admin_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:text="Select the login role"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Admin"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/admin_button"
        app:layout_constraintStart_toStartOf="@id/admin_button"
        app:layout_constraintTop_toBottomOf="@id/admin_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="User"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/user_button"
        app:layout_constraintStart_toStartOf="@id/user_button"
        app:layout_constraintTop_toBottomOf="@id/user_button" />

</androidx.constraintlayout.widget.ConstraintLayout>